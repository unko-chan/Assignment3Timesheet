<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>ca.bcit.infosys.liangk</groupId>
    <artifactId>timesheets-rest-backend</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>war</packaging>

    <name>Timesheets REST Backend</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>

        <!-- Versions -->
        <jakartaee.version>10.0.0</jakartaee.version>
        <junit.jupiter.version>5.10.2</junit.jupiter.version>
        <wildfly-maven-plugin.version>5.0.0.Final</wildfly-maven-plugin.version>

        <!-- WildFly server version used by the OKD image -->
        <wildfly.version>26.1.2.Final</wildfly.version>
    </properties>

    <dependencies>
        <!-- Jakarta EE Web Profile: JPA, JAX-RS, CDI, EJB, JSON-B, etc. -->
        <dependency>
            <groupId>jakarta.platform</groupId>
            <artifactId>jakarta.jakartaee-web-api</artifactId>
            <version>${jakartaee.version}</version>
            <scope>provided</scope>
        </dependency>

        <!-- Unit testing with JUnit 5 -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <version>${junit.jupiter.version}</version>
            <scope>test</scope>
        </dependency>

    </dependencies>


    <build>
        <finalName>${project.artifactId}</finalName>

        <plugins>
            <!-- Java 17 compilation -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <release>17</release>
                </configuration>
            </plugin>

            <!-- Enable JUnit 5 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.2.5</version>
                <configuration>
                    <useModulePath>false</useModulePath>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.wildfly.plugins</groupId>
                <artifactId>wildfly-maven-plugin</artifactId>
                <version>${wildfly-maven-plugin.version}</version>

                <configuration>
                    <discover-provisioning-info>
                        <!-- Match the version used in the labs/OKD WildFly image -->
                        <version>${wildfly.version}</version>
                        <verbose>true</verbose>
                        <!-- Tell WildFly we’re running in cloud/OKD -->
                        <context>cloud</context>
                        <add-ons>
                            <!-- Install MySQL DataSource support -->
                            <add-on>mysql</add-on>
                        </add-ons>
                    </discover-provisioning-info>
                    <galleon-options>
                        <jboss-fork-embedded>true</jboss-fork-embedded>
                    </galleon-options>
                    <!-- Make the deployed WAR be ROOT.war (so it’s at /) -->
                    <runtime-name>ROOT.war</runtime-name>
                </configuration>

                <executions>
                    <execution>
                        <goals>
                            <goal>package</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
