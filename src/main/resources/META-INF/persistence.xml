<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <!-- Remote persistence unit: used by WildFly/OKD via the DataSource -->
    <persistence-unit name="TimesheetsPU" transaction-type="JTA">
        <jta-data-source>java:/jdbc/TimesheetsDS</jta-data-source>
        <properties>
            <!-- Do not auto-generate schema on the server -->
            <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
        </properties>
    </persistence-unit>

</persistence>
